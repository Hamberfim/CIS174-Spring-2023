@model Contact
@{
    ViewBag.Title = "Contact Details";
}
<h2>Contact Details</h2>
<ul class="list-group">
    <li class="list-group-item">
        <label>Name:&nbsp;</label>@Model.FirstName @Model.LastName
    </li>
    <li class="list-group-item">
        <label>Phone:&nbsp;</label>@Model.Phone
    </li>
    <li class="list-group-item">
        <label>Email:&nbsp;</label>@Model.Email
    </li>
    <li class="list-group-item">
        <label>Category:&nbsp;</label>@Model.Category.Name
    </li>
    <li class="list-group-item">
        <label>Date Added:&nbsp;</label>@Model.DateAdded.ToShortDateString() as @Model.DateAdded.ToLongDateString()
    </li>
    <li class="list-group-item">
        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" class="btn btn-outline-primary btn-sm">Edit</a>
        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" class="btn btn-outline-danger btn-sm">Delete</a>
        <a asp-controller="Home" asp-action="Index" asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" class="btn btn-outline-primary btn-sm">Home</a>
    </li>
</ul>