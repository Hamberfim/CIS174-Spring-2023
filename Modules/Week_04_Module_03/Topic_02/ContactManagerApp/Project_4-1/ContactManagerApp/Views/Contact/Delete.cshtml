@model Contact
@{
    ViewBag.Title = $"Delete Contact";
}
<h2>Delete Contact</h2>
<form asp-action="Delete" method="post">
    <!-- used to tract record-->
    <input type="hidden" asp-for="ContactId" />
    <p><strong><span class="text-danger">Warning!</span></strong> Do you really wan to delete <strong><span class="text-danger">@Model.FirstName @Model.LastName</span></strong>?</p>
    <button type="submit" class="btn btn-outline-danger btn-sm">Yes</button>
    <a asp-controller="Contact" asp-action="Details" asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" class="btn btn-outline-primary btn-sm">No</a>
</form>